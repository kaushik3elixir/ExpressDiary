<%- include('./layout/Header')  %> 
<%- include('./layout/Navbar') %> 

    <div class="add-to-diary">
        <h1>Add <span class="green-text">Diary</span></h1>
    

        <form action="/add-to-diary" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea type="text" class="form-control" id="description" cols="30" rows="5" name="description"></textarea>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" class="form-control" id="date" name="date">
            </div>

            <input type="submit" value="Add to Diary">

        </form>
    </div>

